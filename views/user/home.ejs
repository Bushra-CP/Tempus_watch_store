<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="author" content="Untree.co" />
    <link rel="shortcut icon" href="favicon.png" />

    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap4" />

    <!-- Bootstrap CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome (latest stable) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />

    <!-- Bootstrap Icons (optional, if you use them) -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Cookie&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <!-- Css Styles -->
    <link rel="stylesheet" href="css3/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="css3/elegant-icons.css" type="text/css" />
    <link rel="stylesheet" href="css3/jquery-ui.min.css" type="text/css" />
    <link rel="stylesheet" href="css3/magnific-popup.css" type="text/css" />
    <link rel="stylesheet" href="css3/owl.carousel.min.css" type="text/css" />
    <link rel="stylesheet" href="css3/slicknav.min.css" type="text/css" />
    <link rel="stylesheet" href="css3/style.css" type="text/css" />
    <link rel="stylesheet" href="css3/homeStyle.css" type="text/css" />

    <link href="css/tiny-slider.css" rel="stylesheet" />
    <link href="css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/tempusStyle.css" />
    <title>Tempus</title>
  </head>

  <body>
    <!--HEADER-->
    <%- include('../../views/partials/user/header')%>
    <!--HEADER-->
    <!-- Start Hero Section -->
    <div id="watchCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active">
          <div
            class="hero mt-3 herostyle"
            style="background-image: url('images/tempuscarousel3.jpg')"
          >
            <div class="container">
              <div class="row justify-content-between">
                <div class="col-lg-5">
                  <div class="intro-excerpt">
                    <h1>
                      Timeless Elegance<span class="d-block">
                        on Your Wrist</span
                      >
                    </h1>
                    <p class="mb-4" style="font-size: large">
                      Discover our premium collection of luxury watches crafted
                      for style and precision.
                    </p>
                    <p>
                      <a href="#" class="btn btn-secondary me-2">Shop Now</a>
                    </p>
                  </div>
                </div>
                <div class="col-lg-7"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item">
          <div
            class="hero mt-3 herostyle"
            style="background-image: url('images/tempuscarousel4.jpg')"
          >
            <div class="container">
              <div class="row justify-content-between">
                <div class="col-lg-5">
                  <div class="intro-excerpt">
                    <h1>
                      New Season<span class="d-block"> New Styles</span
                      ><span class="d-block"> New You...</span>
                    </h1>
                    <p class="mb-4" style="font-size: large">
                      Explore the latest arrivals designed to match every
                      occasionâ€”classic, sporty, or casual.
                    </p>
                    <p>
                      <a href="#" class="btn btn-secondary me-2"
                        >Explore Collection</a
                      >
                    </p>
                  </div>
                </div>
                <div class="col-lg-7"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item">
          <div
            class="hero mt-3 herostyle"
            style="background-image: url('images/tempuscarousel6.jpg')"
          >
            <div class="container">
              <div class="row justify-content-between">
                <div class="col-lg-5">
                  <div class="intro-excerpt">
                    <h1>
                      Exclusive <span class="d-block"> Offers</span
                      ><span class="d-block"> Just for You</span>
                    </h1>
                    <p class="mb-4" style="font-size: large">
                      Enjoy up to 20% off on selected watches. Free shipping &
                      1-year warranty included.
                    </p>
                    <p>
                      <a href="#" class="btn btn-secondary me-2"
                        >Grab the Deal</a
                      >
                    </p>
                  </div>
                </div>
                <div class="col-lg-7"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Carousel Controls -->
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#watchCarousel"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon"></span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#watchCarousel"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon"></span>
      </button>
    </div>

    <!-- End Hero Section -->

    <!-- Brand Carousel -->
    <section class="py-4 border-top bg-dark border-bottom my-3">
      <div class="container-fluid">
        <div class="text-center mb-4 mt-3">
          <!-- <h6 class="text-muted mb-0">TRUSTED BY LEADING BRANDS</h6> -->
        </div>
        <div class="brand-carousel-container overflow-hidden">
          <div class="brand-carousel d-flex align-items-center">
            <%brands.forEach((item)=>{%>
            <div class="brand-item text-white"><%=item.toUpperCase()%></div>
            <%})%>
            <!-- Duplicate for seamless loop -->
            <%brands.forEach((item)=>{%>
            <div class="brand-item text-white"><%=item.toUpperCase()%></div>
            <%})%>
          </div>
        </div>
      </div>
    </section>

    <!-- Category Carousel -->
    <section
      class="py-5 bg-light"
      style="background-image: url('images/led lights.jpg')"
    >
      <div class="container-fluid">
        <div class="text-center mb-4">
          <h2 class="display-6 fw-bold">Shop by Category</h2>
          <p class="lead text-muted">
            Find the perfect watch for every style and occasion
          </p>
        </div>
        <div class="category-carousel-container overflow-hidden">
          <div class="category-carousel d-flex">
            <%categories.forEach((item)=>{%>
            <a
              href="/collections?search=<%=item.categoryName%>"
              class="text-decoration-none"
            >
              <div class="category-slide" style="width: 300px">
                <div class="card h-100 text-center border-0 shadow-sm">
                  <div class="card-body">
                    <img src="<%=item.image%>" alt="" />
                    <h5 class="h5 card-title mt-3"><%=item.categoryName%></h5>
                    <!-- <p class="card-text"><%=item.description%></p> -->
                  </div>
                </div>
              </div>
            </a>
            <%})%>

            <!-- Duplicate slides for seamless loop -->

            <%categories.forEach((item)=>{%>
            <a
              href="/collections?search=<%=item.categoryName%>"
              class="text-decoration-none"
            >
              <div class="category-slide" style="width: 300px">
                <div class="card h-100 text-center border-0 shadow-sm">
                  <div class="card-body">
                    <img src="<%=item.image%>" alt="" />
                    <h5 class="h5 card-title mt-3"><%=item.categoryName%></h5>
                    <!-- <p class="card-text"><%=item.description%></p> -->
                  </div>
                </div>
              </div>
            </a>
            <%})%>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Products -->
    <section class="py-5 bg-light" id="products">
      <div class="container-fluid">
        <div class="text-center mb-5">
          <h2 class="H4 fw-bold">Featured Products</h2>
          
        </div>

        <div class="row mx-5">
          <% latestProducts.forEach(product => { %>
          <div class="col-md-3 col-sm-6 mb-4">
            <a
              href="/collections/<%= product._id %>?variantId=<%= product.variants[0]._id %>"
              class="text-decoration-none text-dark"
            >
              <div class="card product-card h-100 text-center">
                <div class="product-image">
                  <img
                    src="<%= product.variants[0].variantImages[0] %>"
                    alt="<%= product.productName %>"
                    class="img-fluid"
                  />
                </div>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= product.productName %></h5>

                  <% let prices = product.variants.map(v => v.offerPrice ||
                  v.price).filter(p => p); let minPrice = Math.min(...prices);
                  let maxPrice = Math.max(...prices); %>

                  <div class="mt-auto">
                    <div
                      class="d-flex align-items-center justify-content-center mb-2"
                    >
                      Rs. <%= minPrice %> <% if(minPrice !== maxPrice) { %> -
                      Rs. <%= maxPrice %> <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <% }) %>
        </div>

        <div class="text-center mt-4">
          <a href="/collections" class="btn btn-outline-primary btn-lg"
            >View All Products</a
          >
        </div>
      </div>
    </section>

    <!--FOOTER-->
    <%- include('../../views/partials/user/footer')%>
    <!--FOOTER-->
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/tiny-slider.js"></script>
    <script src="js/custom.js"></script>
    <script src="js/templateJS.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const success_msg =
        "<%= success_msg && success_msg.length > 0 ? success_msg[0] : '' %>";
      const error_msg =
        "<%= error_msg && error_msg.length > 0 ? error_msg[0] : '' %>";

      if (success_msg && success_msg.length > 0) {
        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: success_msg,
          confirmButtonColor: '#3085d6',
        });
      }

      if (error_msg && error_msg.length > 0) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: error_msg,
          confirmButtonColor: '#d33',
        });
      }
    </script>
  </body>
</html>
