<!--HEADER-->
<%- include('../../views/partials/user/header')%>
<!--HEADER-->

<div class="signup-container">
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-6 rounded-lg">
        <div class="card shadow-lg p-4 rounded-4">
          <h3 class="text-center mb-4">Forgot Password</h3>
          <h5 class="text-center mb-5">Enter Email Address</h5>
          <form id="forgotPswd" action="/forgotPasswordOtp" method="POST" novalidate>
           

            <!-- Email -->
            <div class="mb-3">
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="Enter your Email"
                required
              />
              <p id="err1" style="color: rgb(157, 63, 63)"></p>
            </div>


            <!-- Submit -->
            <button type="submit" class="btn btn-primary w-100">Send OTP</button>
          </form>

          <div class="d-flex align-items-center justify-content-center">
            <form action="/login" method="get">
              <button id="backToLogin" type="submit" class="btn btn-primary border-0 bg-white text-dark text-decoration-underline">Back to sign in</button>
            </form>
          </div>

          <div class="text-center my-3">
            <span>OR</span>
          </div>
          <div>
            <a
              href="/auth/google"
              class="btn bg-white text-dark btn-outline-danger w-100 d-flex align-items-center justify-content-center"
            >
              <img
                src="https://developers.google.com/identity/images/g-logo.png"
                alt="Google Logo"
                style="width: 20px; height: 20px; margin-right: 8px"
              />
              Sign in with Google
            </a>
          </div>

          <div class="d-flex align-items-center justify-content-center mt-3">
            Don't have an account?<a href="/login"> Sign up here </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!--FOOTER-->
<%- include('../../views/partials/user/footer')%>
<!--FOOTER-->
