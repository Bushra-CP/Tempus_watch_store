  <body>
    <!--HEADER-->
    <%- include('../../views/partials/user/header')%>
    <!--HEADER-->

    <div class="page-container">
      <!-- Breadcrumb -->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-custom">
          <li class="breadcrumb-item"><a href="/dashboard">Your Account</a></li>
          <li class="breadcrumb-item active" aria-current="page">
            Your Orders
          </li>
        </ol>
      </nav>

      <!-- Page Title -->
      <h1 class="page-title">Your Orders</h1>

      <!-- Filter Section -->
      <div class="filter-section">
        <div class="row align-items-center">
          <div class="col-md-6">
            <div class="d-flex align-items-center gap-3">
              <span class="fw-medium">Filter by:</span>
              <select
                class="form-select filter-dropdown"
                onchange="filterOrders(this.value)"
              >
                <option value="all">All orders</option>
                <option value="delivered">Delivered</option>
                <option value="shipped">Shipped</option>
                <option value="processing">Processing</option>
                <option value="cancelled">Cancelled</option>
              </select>
              <select class="form-select filter-dropdown">
                <option>Last 3 months</option>
                <option>Last 6 months</option>
                <option>This year</option>
                <option>All time</option>
              </select>
            </div>
          </div>
          <div class="col-md-6 text-end">
            <span class="text-muted">5 orders placed</span>
          </div>
        </div>
      </div>

      <!-- Orders List -->
      <div id="ordersList">
        <!-- Order 1 -->
        <div class="order-card" data-status="delivered">
          <div class="order-header">
            <div class="row">
              <div class="col-md-3">
                <div class="order-info">
                  <strong>ORDER PLACED</strong><br />
                  March 15, 2024
                </div>
              </div>
              <div class="col-md-2">
                <div class="order-info">
                  <strong>TOTAL</strong><br />
                  $139.97
                </div>
              </div>
              <div class="col-md-3">
                <div class="order-info">
                  <strong>SHIP TO</strong><br />
                  John Doe
                </div>
              </div>
              <div class="col-md-4 text-end">
                <div class="order-info">
                  <strong>ORDER # 112-3456789-1234567</strong><br />
                  <a href="#" class="text-decoration-none"
                    >View order details</a
                  >
                  |
                  <a href="#" class="text-decoration-none">Invoice</a>
                </div>
              </div>
            </div>
          </div>
          <div class="order-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <span class="status-badge status-delivered">
                <i class="fas fa-check-circle me-1"></i>Delivered March 18
              </span>
              <div class="order-actions">
                <button
                  class="btn btn-secondary-custom"
                  onclick="trackPackage('112-3456789-1234567')"
                >
                  <i class="fas fa-search me-1"></i>Track package
                </button>
                <button
                  class="btn btn-secondary-custom"
                  onclick="returnItems('112-3456789-1234567')"
                >
                  <i class="fas fa-undo me-1"></i>Return items
                </button>
              </div>
            </div>

            <div class="product-row">
              <div class="product-image">
                <i class="fas fa-headphones text-muted fs-3"></i>
              </div>
              <div class="product-details">
                <a href="#" class="product-title d-block"
                  >Sony WH-1000XM4 Wireless Noise Canceling Headphones -
                  Black</a
                >
                <div class="product-meta">
                  Sold by: Sony Official Store | Quantity: 1
                </div>
                <div class="mt-2">
                  <button
                    class="btn btn-primary-custom me-2"
                    onclick="buyAgain('headphones')"
                  >
                    <i class="fas fa-shopping-cart me-1"></i>Buy it again
                  </button>
                  <button
                    class="btn btn-secondary-custom"
                    onclick="writeReview('headphones')"
                  >
                    <i class="fas fa-star me-1"></i>Write a product review
                  </button>
                </div>
              </div>
            </div>

            <div class="product-row">
              <div class="product-image">
                <i class="fas fa-mobile-alt text-muted fs-3"></i>
              </div>
              <div class="product-details">
                <a href="#" class="product-title d-block"
                  >iPhone 15 Pro Max Case - Silicone - Black</a
                >
                <div class="product-meta">
                  Sold by: Apple Store | Quantity: 2
                </div>
                <div class="mt-2">
                  <button
                    class="btn btn-primary-custom me-2"
                    onclick="buyAgain('case')"
                  >
                    <i class="fas fa-shopping-cart me-1"></i>Buy it again
                  </button>
                  <button
                    class="btn btn-secondary-custom"
                    onclick="writeReview('case')"
                  >
                    <i class="fas fa-star me-1"></i>Write a product review
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

      <!-- Pagination -->
      <nav aria-label="Orders pagination" class="pagination-custom">
        <ul class="pagination justify-content-center">
          <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
          </li>
          <li class="page-item active">
            <a class="page-link" href="#">1</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="#">2</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="#">3</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="#">Next</a>
          </li>
        </ul>
      </nav>
    </div>

