<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Tempus</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css2/demo.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css"
    />
  </head>
  <body class="bg-light">
    <!--topBar-->
    <%- include('../../views/partials/admin/topBar')%>
    <!--topBar-->

    <!-- Main Content -->
    <div class="main-content">
      <!--sideBar-->
      <%- include('../../views/partials/admin/sideBar')%>
      <!--sideBar-->
      <div class="form-container">
        <div class="container py-5">
          <div class="row justify-content-center">
            <div class="col-lg-7">
              <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-white text-dark rounded-top-4">
                  <h5 class="mb-0 fw-semibold">‚ûï Edit Variant</h5>
                </div>
                <div class="card-body p-4">
                  <form
                    id="imageForm"
                    action="/admin/products/variant/edit?productId=<%=product._id%>&variantId=<%=variant._id%>"
                    method="POST"
                    enctype="multipart/form-data"
                    novalidate
                  >
                    <!-- Product Details -->
                    <div class="mb-4">
                      <label class="form-label fw-bold">Product Name</label>
                      <input
                        type="text"
                        class="form-control shadow-sm"
                        id="productName"
                        name="productName"
                        value="<%=product.productName%>"
                        disabled
                      />
                    </div>

                    <div class="mb-4">
                      <label class="form-label fw-bold">Brand</label>
                      <input
                        type="text"
                        class="form-control shadow-sm"
                        name="brand"
                        id="brand"
                        value="<%=product.brand%>"
                        disabled
                      />
                    </div>

                    <div class="mb-4">
                      <label class="form-label fw-bold">Category</label>
                      <input
                        type="text"
                        class="form-control shadow-sm"
                        name="category"
                        id="category"
                        value="<%=product.category.categoryName%>"
                        disabled
                      />
                    </div>

                    <hr class="my-4" />

                    <!-- Variants Section -->
                    <div
                      class="bg-white py-2 mb-3 border-bottom"
                      style="top: 60px; z-index: 10"
                    >
                      <h5 class="fw-semibold text-primary">Variants</h5>
                    </div>

                    <div id="variants-container">
                      <div
                        class="variant border rounded-4 p-4 mb-4 bg-light shadow-sm"
                      >
                        <div class="row g-3">
                          <div class="col-md-6">
                            <label class="form-label fw-bold"
                              >Strap Material</label
                            >
                            <input
                              type="text"
                              class="form-control shadow-sm"
                              name="strapMaterial"
                              value="<%=variant.strapMaterial%>"
                              required
                            />
                            <p
                              id="err_strapMaterial"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-bold"
                              >Strap Color</label
                            >
                            <input
                              type="text"
                              class="form-control shadow-sm"
                              name="strapColor"
                              value="<%=variant.strapColor%>"
                              required
                            />
                            <p
                              id="err_strapColor"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-bold">Dial Color</label>
                            <input
                              type="text"
                              class="form-control shadow-sm"
                              name="dialColor"
                              value="<%=variant.dialColor%>"
                              required
                            />
                            <p
                              id="err_dialColor"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-bold"
                              >Case Size (mm)</label
                            >
                            <input
                              type="number"
                              class="form-control shadow-sm"
                              name="caseSize"
                              value="<%=variant.caseSize%>"
                              required
                            />
                            <p
                              id="err_caseSize"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-bold"
                              >Movement Type</label
                            >
                            <select
                              id="movementType"
                              class="form-select shadow-sm"
                              name="movementType"
                              required
                            >
                              <option value="">-- Select Movement --</option>
                              <option value="Quartz">Quartz</option>
                              <option value="Automatic">Automatic</option>
                              <option value="Mechanical">Mechanical</option>
                              <option value="Smart">Smart</option>
                            </select>
                            <p
                              id="err_movementType"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-bold"
                              >Case Material</label
                            >
                            <input
                              type="text"
                              class="form-control shadow-sm"
                              name="caseMaterial"
                              value="<%=variant.caseMaterial%>"
                              required
                            />
                            <p
                              id="err_caseMaterial"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-bold"
                              >Stock Quantity</label
                            >
                            <input
                              type="number"
                              class="form-control shadow-sm"
                              name="stockQuantity"
                              value="<%=variant.stockQuantity%>"
                              required
                            />
                            <p
                              id="err_stockQuantity"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-bold"
                              >Actual Price</label
                            >
                            <input
                              type="number"
                              class="form-control shadow-sm"
                              name="actualPrice"
                              value="<%=variant.actualPrice%>"
                              required
                            />
                            <p
                              id="err_actualPrice"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-bold"
                              >Offer Price</label
                            >
                            <input
                              type="number"
                              class="form-control shadow-sm"
                              name="offerPrice"
                              value="<%=variant.offerPrice%>"
                              required
                            />
                            <p
                              id="err_offerPrice"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-bold">SKU Code</label>
                            <input
                              type="text"
                              class="form-control shadow-sm"
                              name="skuCode"
                              value="<%=variant.skuCode%>"
                              required
                            />
                            <p
                              id="err_skuCode"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>
                          <div class="container-fluid">
                            <div class="row">
                              <% variant.variantImages.forEach((image, index) =>
                              { %>
                              <div
                                class="col-md-3 d-flex justify-content-center"
                              >
                                <div class="position-relative m-1">
                                  <img
                                    src="<%= image %>"
                                    class="img-thumbnail"
                                    width="200"
                                    height="200"
                                  />
                                  <a
                                    href="#"
                                    class="btn btn-sm btn-light border border-black position-absolute top-0 start-0"
                                    onclick="replaceImage('<%=product._id%>', '<%=variant._id%>', <%=index%>); return false;"
                                  >
                                    üîÅ
                                  </a>

                                  <a
                                    href="#"
                                    class="btn btn-sm btn-danger position-absolute top-0 end-0"
                                    onclick="removeImage('<%=product._id%>', '<%=variant._id%>', <%=index%>); return false;"
                                  >
                                    ‚úï
                                  </a>
                                </div>
                              </div>
                              <% }) %>
                            </div>
                          </div>

                          <div class="col-md-12">
                            <label class="form-label fw-bold"
                              >Change Images</label
                            >
                            <input
                              type="file"
                              id="imageInput"
                              class="form-control shadow-sm"
                              name="variantImages"
                              accept="image/*"
                              multiple
                            />
                          </div>
                          <div
                            id="previewContainer"
                            class="d-flex flex-wrap gap-2 mt-2"
                          ></div>
                        </div>
                      </div>
                    </div>

                    <!-- Submit -->

                    <div
                      class="d-flex justify-content-between align-items-center mb-3"
                    >
                      <div>
                        <button
                          type="submit"
                          class="btn btn-primary px-4 fw-semibold shadow"
                        >
                          Edit
                        </button>
                      </div>
                      <div class="d-flex gap-2">
                        <button
                          type="reset"
                          class="btn btn-outline-warning px-4 rounded-pill"
                        >
                          Reset
                        </button>
                      </div>
                    </div>
                  </form>

                  <!-- Modal -->
                  <div
                    class="modal fade"
                    id="cropperModal"
                    tabindex="-1"
                    aria-hidden="true"
                  >
                    <div class="modal-dialog modal-md">
                      <div class="modal-content border-0 shadow-lg">
                        <div class="modal-body p-0">
                          <img id="imageToCrop" class="img-fluid rounded" />
                        </div>
                        <div class="modal-footer">
                          <button
                            type="button"
                            id="cropButton"
                            class="btn btn-success px-4"
                          >
                            ‚úÇ Crop
                          </button>
                          <button
                            type="button"
                            class="btn btn-secondary px-4"
                            data-bs-dismiss="modal"
                          >
                            ‚úñ Cancel
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <script src="/js2/editVariant.js"></script>
    <script src="/js2/fetchCalls.js"></script>
    <script>
      document.getElementById('movementType').value =
        '<%= variant.movementType %>';
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const success_msg =
        "<%= success_msg && success_msg.length > 0 ? success_msg[0] : '' %>";
      const error_msg =
        "<%= error_msg && error_msg.length > 0 ? error_msg[0] : '' %>";

      if (success_msg && success_msg.length > 0) {
        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: success_msg,
          confirmButtonColor: '#3085d6',
        });
      }

      if (error_msg && error_msg.length > 0) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: error_msg,
          confirmButtonColor: '#d33',
        });
      }
    </script>
  </body>
</html>
