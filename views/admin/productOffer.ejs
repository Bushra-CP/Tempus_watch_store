<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Tempus</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <link rel="stylesheet" href="/css2/demo.css" />
    <style>
      .custom-thead th {
        background-color: #212529 !important;
        color: #fff !important;
      }
    </style>
  </head>
  <body class="bg-light">
    <!--topBar-->
    <%- include('../../views/partials/admin/topBar')%>
    <!--topBar-->

    <!-- Main Content -->
    <div class="main-content">
      <!--topBar-->
      <%- include('../../views/partials/admin/sideBar')%>
      <!--topBar-->
      <!-- Dashboard Content -->
      <main class="container-fluid py-4">
        <!-- Stats Cards -->

        <div class="d-flex justify-content-between align-items-center mb-4">
          <!-- Search Bar -->

          <form action="/admin/productOffers" method="get" class="d-flex">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                name="search"
                placeholder="Search by category name..."
                style="border-radius: 5px; width: 300px"
              />
              <button
                class="btn btn-white btn-outline-dark mx-3"
                type="submit"
                style="border-radius: 5px"
              >
                Search
              </button>
              <button
                class="btn btn-white mx-3"
                type="clear"
                style="border-radius: 5px; border-color: #212529"
              >
                <a href="/admin/productOffers" class="text-decoration-none text-dark"
                  >Clear</a
                >
              </button>
            </div>
          </form>
        </div>

        <div class="container mt-4">
          <div class="card shadow-sm">
            <div class="card-header">
              <h5 class="card-title mb-0">Product Offers</h5>
            </div>
            <div class="card-body p-0">
              <% if (productOffers.length > 0) { %>
              <table
                class="table table-bordered table-hover align-middle text-center"
              >
                <thead class="custom-thead">
                  <tr>
                    <th scope="col">Product Name</th>
                    <th scope="col">Offer Title</th>
                    <th scope="col">Offer Type</th>
                    <th scope="col">Offer Value</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% productOffers.forEach((item) => { %>
                  <tr>
                    <td><%= item.productId.productName %></td>
                    <td><%= item.offerTitle %></td>
                    <td><%= item.discountType %></td>
                    <td><%= item.discountValue %></td>
                    <td><%= item.startDate.toDateString() %></td>
                    <td><%= item.endDate.toDateString() %></td>
                    <td>
                      <% if (item.status=='active') { %>
                      <span class="badge bg-success">Active</span>
                      <% } else if(item.status=='inactive') { %>
                      <span class="badge bg-danger">Inactive</span>
                      <% } %>
                    </td>
                    <td>
                      <div class="d-flex flex-column justify-content-center">
                        <a
                          class="btn btn-sm btn-primary me-2 mb-2"
                          data-bs-toggle="modal"
                          data-bs-target="#editOfferModal_<%=item._id%>"
                          >Edit offer</a
                        >

                        <% if (item.status=='active') { %>
                        <a
                          class="btn btn-sm btn-warning mb-2 deactivateOffer"
                          data-offer-id="<%=item._id%>"
                        >
                          Deactivate
                        </a>
                        <% } else { %>
                        <a
                          class="btn btn-sm btn-success mb-2 activateOffer"
                          data-offer-id="<%=item._id%>"
                        >
                          Activate
                        </a>
                        <% } %>

                        <a
                          class="btn btn-outline-danger btn-sm removeOffer"
                          data-offer-id="<%=item._id%>"
                          >Remove</a
                        >
                      </div>
                      <!-- EDIT OFFER MODAL -->
                      <div
                        class="modal fade"
                        id="editOfferModal_<%=item._id%>"
                        tabindex="-1"
                        aria-hidden="true"
                      >
                        <div
                          class="modal-dialog modal-lg modal-dialog-centered"
                        >
                          <div
                            class="modal-content border-0 shadow-lg custom-modal"
                          >
                            <!-- Modal Header -->
                            <div class="modal-header bg-primary text-white">
                              <h5 class="modal-title">
                                <i class="bi bi-tags-fill me-2"></i> Edit
                                Product Offer
                              </h5>
                              <button
                                type="button"
                                class="btn-close btn-close-white"
                                data-bs-dismiss="modal"
                              ></button>
                            </div>

                            <!-- Modal Body -->
                            <div class="modal-body p-4">
                              <form
                                action="/admin/editProductOffer?_method=put"
                                method="POST"
                                novalidate
                              >
                                <!-- Hidden Product ID -->
                                <input
                                  type="hidden"
                                  name="productId"
                                  value="<%= item.productId._id %>"
                                />

                                <div class="row g-3">
                                  <!-- Offer Title -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Offer Title</label
                                    >
                                    <input
                                      type="text"
                                      class="form-control"
                                      name="offerTitle"
                                      value="<%=item.offerTitle%>"
                                      required
                                    />
                                  </div>

                                  <!-- Discount Type -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Discount Type</label
                                    >
                                    <select
                                      class="form-select"
                                      name="discountType"
                                      id="discountType_<%=item._id%>"
                                      required
                                    >
                                      <option value="PERCENTAGE">
                                        Percentage (%)
                                      </option>
                                      <option value="FIXED">
                                        Fixed Amount (â‚¹)
                                      </option>
                                    </select>
                                    <script>
                                      document.getElementById(
                                        'discountType_<%=item._id%>',
                                      ).value = '<%= item.discountType %>';
                                    </script>
                                  </div>

                                  <!-- Discount Value -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Discount Value</label
                                    >
                                    <input
                                      type="number"
                                      class="form-control"
                                      name="discountValue"
                                      min="1"
                                      value="<%= item.discountValue%>"
                                      required
                                    />
                                  </div>

                                  <!-- Start Date -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Start Date
                                    </label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      name="startDate"
                                      value="<%= item.startDate.toDateString()%>"
                                      required
                                    />
                                  </div>

                                  <!-- End Date -->
                                  <div class="col-md-6">
                                    <label class="form-label">End Date </label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      name="endDate"
                                      value="<%= item.endDate.toDateString()%>"
                                      required
                                    />
                                  </div>

                                  <!-- Status -->
                                  <div class="col-md-6">
                                    <label class="form-label">Status</label>
                                    <select
                                      class="form-select"
                                      name="status"
                                      id="status_<%= item._id %>"
                                    >
                                      <option value="active">Active</option>
                                      <option value="inactive">Inactive</option>
                                    </select>
                                  </div>
                                  <script>
                                    document.getElementById(
                                      'status_<%= item._id %>',
                                    ).value = '<%= item.status %>';
                                  </script>
                                </div>

                                <div class="mt-4 text-end">
                                  <button
                                    type="submit"
                                    class="btn btn-success px-4"
                                  >
                                    <i class="bi bi-check-circle me-1"></i> Edit
                                    Offer
                                  </button>
                                </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- EDIT OFFER MODAL -->
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
              <% } else { %>
              <div class="alert alert-info text-center">
                No category offers found found..
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js2/productOfferActions.js"></script>
    <script src="/js2/productOffer.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const success_msg =
        "<%= success_msg && success_msg.length > 0 ? success_msg[0] : '' %>";
      const error_msg =
        "<%= error_msg && error_msg.length > 0 ? error_msg[0] : '' %>";

      if (success_msg && success_msg.length > 0) {
        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: success_msg,
          confirmButtonColor: '#3085d6',
        });
      }

      if (error_msg && error_msg.length > 0) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: error_msg,
          confirmButtonColor: '#d33',
        });
      }
    </script>
  </body>
</html>
