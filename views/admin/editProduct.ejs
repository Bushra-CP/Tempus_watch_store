<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Add Product</title>
        <style>
      .form-container {
        background: linear-gradient(180deg, #3b4d5d 0%, #769489 100%);
        min-height: 100vh;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .form-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><defs><radialGradient id="a" cx="50%" cy="50%"><stop offset="0%" stop-color="%23ffffff" stop-opacity="0.1"/><stop offset="100%" stop-color="%23ffffff" stop-opacity="0"/></radialGradient></defs><circle cx="150" cy="150" r="80" fill="url(%23a)"/><circle cx="850" cy="200" r="120" fill="url(%23a)"/><circle cx="200" cy="800" r="100" fill="url(%23a)"/><circle cx="750" cy="750" r="90" fill="url(%23a)"/><circle cx="500" cy="100" r="60" fill="url(%23a)"/></svg>');
        animation: float 25s ease-in-out infinite;
      }

      @keyframes float {
        0%,
        100% {
          transform: translateY(0px) rotate(0deg);
        }
        50% {
          transform: translateY(-30px) rotate(180deg);
        }
      }
    </style>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css"
    />
  </head>
  <body>
    <div class="form-container">
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-7">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-white text-dark rounded-top-4">
          <h5 class="mb-0 fw-semibold">âž• Add New Products</h5>
        </div>
        <div class="card-body p-4">
          <form
            id="imageForm"
            action="/admin/products/edit?id=<%=product._id%>"
            method="POST"
            enctype="multipart/form-data"
            novalidate
          >
            <!-- Product Details -->
            <div class="mb-4">
              <label class="form-label fw-bold">Product Name</label>
              <input
                type="text"
                class="form-control shadow-sm"
                id="productName"
                name="productName"
                value="<%=product.productName%>"
                required
              />
              <p id="errProductName" class="small text-danger mt-1"></p>
            </div>

            <div class="mb-4">
              <label class="form-label fw-bold">Description</label>
              <textarea
                class="form-control shadow-sm"
                name="description"
                id="description"
                rows="3"
                required
              ><%= product.description %></textarea>
              <p id="errDescription" class="small text-danger mt-1"></p>
            </div>

            <div class="mb-4">
              <label class="form-label fw-bold">Brand</label>
              <input
                type="text"
                class="form-control shadow-sm"
                name="brand"
                id="brand"
                value="<%=product.brand%>"
                required
              />
              <p id="errBrand" class="small text-danger mt-1"></p>
            </div>

            <div class="mb-4">
              <label class="form-label fw-bold">Current Category: <%=product.category.categoryName%></label>
              <select class="form-select shadow-sm" name="category" id="category" required>
                <option value="">--Select Category--</option>
                <% categoryNames.forEach(cat => { %>
                  <option value="<%= cat._id %>"><%= cat.categoryName %></option>
                <% }) %>
              </select>
            </div>
            

            <hr class="my-4"/>

            <!-- Variants Section -->
            <div class="sticky-top bg-white py-2 mb-3 border-bottom" style="top:60px; z-index:10;">
              <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDiv">
  Add Variant
</button>

            </div>
<div class="collapse mt-3" id="collapseDiv">
            <div id="variants-container">
              <div class="variant border rounded-4 p-4 mb-4 bg-light shadow-sm">
                <div class="row g-3">
                  <div class="col-md-6">
                    <label class="form-label fw-bold">Strap Material</label>
                    <input
                      type="text"
                      class="form-control shadow-sm"
                      name="variants[0][strapMaterial]"
                      required
                    />
                    <p id="errVariants_0_strapMaterial" class="small text-danger mt-1"></p>
                  </div>

                  <div class="col-md-6">
                    <label class="form-label fw-bold">Strap Color</label>
                    <input
                      type="text"
                      class="form-control shadow-sm"
                      name="variants[0][strapColor]"
                      required
                    />
                    <p id="errVariants_0_strapColor" class="small text-danger mt-1"></p>
                  </div>

                  <div class="col-md-6">
                    <label class="form-label fw-bold">Dial Color</label>
                    <input
                      type="text"
                      class="form-control shadow-sm"
                      name="variants[0][dialColor]"
                      required
                    />
                    <p id="errVariants_0_dialColor" class="small text-danger mt-1"></p>
                  </div>

                  <div class="col-md-6">
                    <label class="form-label fw-bold">Case Size (mm)</label>
                    <input
                      type="number"
                      class="form-control shadow-sm"
                      name="variants[0][caseSize]"
                      required
                    />
                    <p id="errVariants_0_caseSize" class="small text-danger mt-1"></p>
                  </div>

                  <div class="col-md-6">
                    <label class="form-label fw-bold">Movement Type</label>
                    <select
                      class="form-select shadow-sm"
                      name="variants[0][movementType]"
                      required
                    >
                      <option value="">-- Select Movement --</option>
                      <option value="Quartz">Quartz</option>
                      <option value="Automatic">Automatic</option>
                      <option value="Mechanical">Mechanical</option>
                      <option value="Smart">Smart</option>
                    </select>
                    <p id="errVariants_0_movementType" class="small text-danger mt-1"></p>
                  </div>

                  <div class="col-md-6">
                    <label class="form-label fw-bold">Case Material</label>
                    <input
                      type="text"
                      class="form-control shadow-sm"
                      name="variants[0][caseMaterial]"
                      required
                    />
                    <p id="errVariants_0_caseMaterial" class="small text-danger mt-1"></p>
                  </div>

                  <div class="col-md-6">
                    <label class="form-label fw-bold">Stock Quantity</label>
                    <input
                      type="number"
                      class="form-control shadow-sm"
                      name="variants[0][stockQuantity]"
                      required
                    />
                    <p id="errVariants_0_stockQuantity" class="small text-danger mt-1"></p>
                  </div>

                  <div class="col-md-6">
                    <label class="form-label fw-bold">Actual Price</label>
                    <input
                      type="number"
                      class="form-control shadow-sm"
                      name="variants[0][actualPrice]"
                      required
                    />
                    <p id="errVariants_0_actualPrice" class="small text-danger mt-1"></p>
                  </div>

                  <div class="col-md-6">
                    <label class="form-label fw-bold">Offer Price</label>
                    <input
                      type="number"
                      class="form-control shadow-sm"
                      name="variants[0][offerPrice]"
                      required
                    />
                    <p id="errVariants_0_offerPrice" class="small text-danger mt-1"></p>
                  </div>

                  <div class="col-md-6">
                    <label class="form-label fw-bold">SKU Code</label>
                    <input
                      type="text"
                      class="form-control shadow-sm"
                      name="variants[0][skuCode]"
                      required
                    />
                    <p id="errVariants_0_skuCode" class="small text-danger mt-1"></p>
                  </div>

                  <div class="col-md-12">
                    <label class="form-label fw-bold">Variant Images</label>
                    <input
                      type="file"
                      id="imageInput_0"
                      class="form-control shadow-sm"
                      name="variants[0][variantImages]"
                      accept="image/*"
                      multiple
                    />
                  </div>
                  <div id="previewContainer_0" class="d-flex flex-wrap gap-2 mt-2"></div>
                </div>
              </div>
            </div>

            <!-- Add More Variants Button -->
            <div class="d-flex gap-2 mb-4">
              <button
                type="button"
                class="btn btn-outline-secondary"
                onclick="addVariant()"
              >
                âž• Add Another Variant
              </button>
            </div>
</div>
            <!-- Submit -->

            <div
                    class="d-flex justify-content-between align-items-center mb-3"
                  >
                    <div>
                      <button type="submit" class="btn btn-primary px-4 fw-semibold shadow">
                ðŸ’¾ Save
              </button>
                      
                    </div>
                    <div>
                      <button type="reset" class="btn btn-warning">
                        Reset
                      </button>
                      <button type="button" class="btn btn-info">
                        <a
                          href="/admin/products"
                          class="text-white text-decoration-none"
                          >Go back</a
                        >
                      </button>
                    </div>
                  </div>
             
          </form>

          <!-- Modal -->
          <div class="modal fade" id="cropperModal" tabindex="-1">
            <div class="modal-dialog modal-xl">
              <div class="modal-content rounded-4 shadow-lg">
                <div class="modal-body p-0">
                  <img
                    id="imageToCrop"
                    class="w-100 h-auto"
                    style="max-height: 80vh; object-fit: contain"
                  />
                </div>
                <div class="modal-footer">
                  <button type="button" id="cropButton" class="btn btn-success px-4">
                    âœ‚ Crop
                  </button>
                  <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                    âœ– Cancel
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <script src="/js2/cropMultipleImages.js"></script>
   

  </body>
</html>
