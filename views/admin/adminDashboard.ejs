<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Tempus</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css2/demo.css" />
    <style>
      .hidden {
        display: none !important;
      }
      #revenueChart {
        width: 100%;
        height: auto;
        aspect-ratio: 16/9; /* Keeps it responsive */
      }
    </style>
  </head>
  <body class="bg-light">
    <!--topBar-->
    <%- include('../../views/partials/admin/topBar')%>
    <!--topBar-->

    <!-- Main Content -->
    <div class="main-content">
      <!--topBar-->
      <%- include('../../views/partials/admin/sideBar')%>
      <!--topBar-->
      <!-- Dashboard Content -->
      <main class="container-fluid py-4">
        <!-- Stats Cards -->
        <div class="row g-4 mb-4">
          <div class="col-xl-3 col-md-6">
            <div class="card stats-card h-100">
              <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                  <div>
                    <p class="text-muted mb-1 fw-medium">Total Users</p>
                    <h3 class="mb-1"><%=totalUsers%></h3>
                    <!-- <small class="text-success">+12% from last month</small> -->
                  </div>
                  <div class="stats-icon bg-primary bg-opacity-10">
                    <i class="bi bi-people text-primary fs-4"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xl-3 col-md-6">
            <div class="card stats-card h-100">
              <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                  <div>
                    <p class="text-muted mb-1 fw-medium">Revenue</p>
                    <h3 class="mb-1">â‚¹<%=grossRevenue%></h3>
                    <!-- <small class="text-success">+8% from last month</small> -->
                  </div>
                  <div class="stats-icon bg-success bg-opacity-10">
                    <i class="bi bi-currency-dollar text-success fs-4"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xl-3 col-md-6">
            <div class="card stats-card h-100">
              <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                  <div>
                    <p class="text-muted mb-1 fw-medium">Orders</p>
                    <h3 class="mb-1"><%=totalOrders%></h3>
                    <!-- <small class="text-danger">-3% from last month</small> -->
                  </div>
                  <div class="stats-icon bg-warning bg-opacity-10">
                    <i class="bi bi-bag text-warning fs-4"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xl-3 col-md-6">
            <div class="card stats-card h-100">
              <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                  <div>
                    <p class="text-muted mb-1 fw-medium">Products</p>
                    <h3 class="mb-1"><%=totalProducts%></h3>
                    <!-- <small class="text-success">+5% from last month</small> -->
                  </div>
                  <div class="stats-icon bg-info bg-opacity-10">
                    <i class="bi bi-box text-info fs-4"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Charts and Activity -->
        <div class="row g-4 mb-4">
          <div class="col-lg-7">
            <div class="card">
              <div
                class="card-header d-flex align-items-center justify-content-between"
              >
                <h5 class="card-title mb-0">Revenue Overview</h5>

                <div class="dropdown dropdown-menu-end">
                  <button
                    type="button"
                    class="btn btn-white btn-outline-dark dropdown-toggle"
                    data-bs-toggle="dropdown"
                  >
                    Filter
                  </button>
                  <ul class="dropdown-menu">
                    <li>
                      <a class="dropdown-item" onclick="setFilter('Weekly')"
                        >Weekly</a
                      >
                    </li>
                    <li>
                      <a class="dropdown-item" onclick="setFilter('Monthly')"
                        >Monthly</a
                      >
                    </li>
                    <li>
                      <a class="dropdown-item" onclick="setFilter('Yearly')"
                        >Yearly</a
                      >
                    </li>
                  </ul>
                </div>
              </div>
              <div class="card-body">
                <canvas id="revenueChart"></canvas>
              </div>
            </div>
          </div>

          <div class="col-lg-5">
            <div class="card h-100">
              <div
                class="card-header d-flex align-items-center justify-content-between"
              >
                <h5 class="card-title mb-0"></h5>

                <select
                  id="listType"
                  onchange="showTable()"
                  class="form-select form-select-sm w-auto border-secondary-subtle"
                >
                  <option value="products">Top Selling Products</option>
                  <option value="categories">Top Selling Categories</option>
                  <option value="brands">Top Selling Brands</option>
                </select>
              </div>
              <div class="card-body">
                <div class="d-flex flex-column gap-3">
                  <!-- PRODUCTS TABLE -->
                  <div id="productsTable" class="table-responsive">
                    <h6 class="fw-semibold text-secondary mb-3">
                      Top Selling Products
                    </h6>

                    <table class="table table-hover mb-0">
                      <thead>
                        <tr>
                          <th>Rank</th>
                          <th>Product Name</th>
                          <th>Units Sold</th>
                          <th>Total Sales</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% orderedProductsList.forEach((p,index) => { %>
                        <%if(index <=9){%>
                        <tr>
                          <td><%= ++index %></td>
                          <td><%= p.productName %></td>
                          <td><%= p.count %></td>
                          <td><%= p.total %></td>
                        </tr>
                        <%}%>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>

                  <!-- CATEGORIES TABLE -->
                  <div id="categoriesTable" class="table-responsive hidden">
                    <h6 class="fw-semibold text-secondary mb-3">
                      Top Selling Categories
                    </h6>
                    <table class="table table-hover mb-0">
                      <thead>
                        <tr>
                          <th>Rank</th>
                          <th>Category Name</th>
                          <th>Units Sold</th>
                          <th>Total Sales</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% orderedCategoryList.forEach((p,index) => { %>
                        <%if(index <=10){%>
                        <tr>
                          <td><%= ++index %></td>
                          <td><%= p.categoryName %></td>
                          <td><%= p.count %></td>
                          <td><%= p.total %></td>
                        </tr>
                        <%}%>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>

                  <!-- BRANDS TABLE -->
                  <div id="brandsTable" class="table-responsive hidden">
                    <h6 class="fw-semibold text-secondary mb-3">
                      Top Selling Brands
                    </h6>
                    <table class="table table-hover mb-0">
                      <thead>
                        <tr>
                          <th>Rank</th>
                          <th>Brand Name</th>
                          <th>Units Sold</th>
                          <th>Total Sales</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% orderedBrandsList.forEach((p,index) => { %>
                        <%if(index <=10){%>
                        <tr>
                          <td><%= ++index %></td>
                          <td><%= p.brandName %></td>
                          <td><%= p.count %></td>
                          <td><%= p.total %></td>
                        </tr>
                        <%}%>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Orders Table -->
        <div class="card">
          <div class="card-header">
            <h5 class="card-title mb-0">Recent Orders</h5>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
                            <table
                class="table table-striped table-hover table-bordered mb-0"
                id="productsTable"
              >
                <thead>
                  <tr>
                    <th>Order No</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Discount</th>
                    <th>Final</th>
                  </tr>
                </thead>

                <tbody>
                  <% if (orders && orders.length > 0) { %> <%
                  orders.forEach((item,index) => { %>
                  <tr>
                    <%if(index<=9){%>
                    <td><%= item.orderDetails.orderNumber %></td>
                    <td><%= item.orderDetails.orderDate.toDateString() %></td>
                    <td>â‚¹<%= item.orderDetails.subTotal %></td>
                    <td>â‚¹<%= item.orderDetails.discount %></td>
                    <td>â‚¹<%= item.orderDetails.orderTotal %></td>
                    <%}%>
                  </tr>
                  <% }); %>
                  <% } else { %>
                  <tr>
                    <td colspan="5" class="text-center text-muted">
                      Nothing to show...
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js2/demo.js"></script>
    <script src="/js2/adminCharts.js"></script>
  </body>
</html>
