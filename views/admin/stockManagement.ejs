<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Tempus</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css2/demo.css" />
    <style>
      .custom-thead th {
        background-color: #212529 !important;
        color: #fff !important;
        letter-spacing: 0.5px;
      }

      .table td,
      .table th {
        vertical-align: middle;
      }

      .btn {
        border-radius: 6px;
        font-weight: 500;
      }

      .view-btn {
        background: #212529;
        color: #fff !important;
        font-size: 0.8rem;
        padding: 5px 12px;
        border-radius: 20px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: 0.2s;
      }
      .view-btn:hover {
        background: #000;
        text-decoration: none;
      }

      .variant-card {
        border: 1px solid #e9ecef;
        border-radius: 12px;
        padding: 15px;
        background: #fdfdfd;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        margin-bottom: 15px;
        transition: transform 0.2s;
      }
      .variant-card:hover {
        transform: scale(1.02);
      }
    </style>
  </head>

  <body class="bg-light">
    <!--topBar-->
    <%- include('../../views/partials/admin/topBar')%>
    <!--topBar-->

    <!-- Main Content -->
    <div class="main-content">
      <!--sideBar-->
      <%- include('../../views/partials/admin/sideBar')%>
      <!--sideBar-->

      <!-- Dashboard Content -->
      <main class="container-fluid py-4">
        <div
          class="d-flex justify-content-between align-items-center mb-4 mx-3"
        >
          <!-- Search Bar -->

          <form action="/admin/inventory" method="get" class="d-flex">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                name="search"
                value="<%=search%>"
                placeholder="Search by product name..."
                style="border-radius: 5px; width: 300px"
              />
              <button
                class="btn btn-white btn-outline-dark mx-3"
                type="submit"
                style="border-radius: 5px"
              >
                Search
              </button>
              <button
                class="btn btn-white mx-3"
                type="clear"
                style="border-radius: 5px; border-color: #212529"
              >
                <a href="/admin/inventory" class="text-decoration-none text-dark"
                  >Clear</a
                >
              </button>
            </div>
          </form>

          <div class="d-flex">
            <div class="dropdown dropdown-menu-end me-3">
              <button
                type="button"
                class="btn btn-white btn-outline-dark dropdown-toggle"
                data-bs-toggle="dropdown"
              >
                Filter products
              </button>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" onclick="setFilter('all')">All</a>
                </li>
                <li>
                  <a class="dropdown-item" onclick="setFilter('low_stock')"
                    >With low stock variants</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" onclick="setFilter('out_of_stock')"
                    >With out of stock variants</a
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Products Table -->
        <div class="container mt-4">
          <div class="card shadow-sm">
            <div class="card-header">
              <h5 class="card-title mb-0">Products</h5>
            </div>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-bordered align-middle text-center">
                  <thead class="table-dark">
                    <tr>
                      <th>Product</th>
                      <th>Category</th>
                      <th>Variants</th>
                      <th>Price</th>
                      <th>Stock</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% productList.forEach(product => { %> <%
                    product.variants.forEach((variant, idx) => { %>
                    <tr>
                      <% if (idx === 0) { %>
                      <!-- Only show product info once, spanning all variants -->
                      <td rowspan="<%= product.variants.length %>">
                        <%= product.productName %>
                      </td>
                      <td rowspan="<%= product.variants.length %>">
                        <%= product.category.categoryName %>
                      </td>
                      <% } %>

                      <!-- Variant-specific cells -->
                      <td>
                        <strong>Strap material:</strong>
                        <%= variant.strapMaterial %><br />
                        <strong>Strap color:</strong>
                        <%= variant.strapColor %><br />
                        <strong>Dial color:</strong>
                        <%= variant.dialColor %><br />
                        <strong>Case size:</strong>
                        <%= variant.caseSize %><br />
                        <strong>Movement type:</strong>
                        <%= variant.movementType %><br />
                        <strong>Case material:</strong>
                        <%= variant.caseMaterial %>
                      </td>
                      <td>
                        Actual price: ₹<%= variant.actualPrice %><br>
                        Offer price: ₹<%= variant.offerPrice %>
                    </td>
                                         <td 
  <% if (variant.stockQuantity <= 0) { %>
    class="bg-danger"
  <% } else if (variant.stockQuantity < 5) { %>
    class="bg-warning"
  <% } %>
>
  <%= variant.stockQuantity %>
</td>
                      <td>
                        <% if (variant.stockQuantity <= 0) { %>
                        <span class="badge bg-danger">Out of Stock</span>
                        <% } else if (variant.stockQuantity < 5) { %>
                        <span class="badge bg-warning text-dark"
                          >Low Stock</span
                        >
                        <% } else { %>
                        <span class="badge bg-success">In Stock</span>
                        <% } %>
                      </td>

                      <td>
  <button
    class="btn btn-sm btn-primary edit-stock-btn"
    data-bs-toggle="modal"
    data-bs-target="#editStockModal<%=variant._id%>"
  >
    Edit Stock
  </button>
</td>


<!-- EDIT STOCK QUANTITY MODAL -->
<div
  class="modal fade"
  id="editStockModal<%=variant._id%>"
  tabindex="-1"
  aria-labelledby="editStockModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/admin/editStock?_method=PATCH" method="post">
        <div class="modal-header">
          <h5 class="modal-title" id="editStockModalLabel">Edit Stock</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="productId" name="productId" value="<%=product._id%>" />
          <input type="hidden" id="variantId" name="variantId" value="<%=variant._id%>" />

          <div class="mb-3">
            <label for="stockQuantity" class="form-label">Stock Quantity</label>
            <input
              type="number"
              class="form-control"
              id="stockQuantity"
              name="stockQuantity"
              value="<%=variant.stockQuantity%>"
              min="0"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- EDIT STOCK QUANTITY MODAL -->

                    </tr>
                    <% }) %>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- PAGINATION -->
        <div class="d-flex justify-content-end me-5 mt-5">
          <nav>
            <ul class="pagination">
              <% if (page > 1) { %>
              <li class="page-item">
                <a
                  class="page-link"
                  style="background-color: #1e293b; color: #ffffff"
                  href="?page=<%= page - 1 %>&search=<%= search %>"
                  >Prev</a
                >
              </li>
              <% } %>
              <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= page === i ? 'active' : '' %>">
                <a
                  class="page-link"
                  style="background-color: #1e293b; color: #ffffff"
                  href="?page=<%= i %>&search=<%= search %>"
                  ><%= i %></a
                >
              </li>
              <% } %>
              <% if (page < totalPages) { %>
              <li class="page-item">
                <a
                  class="page-link"
                  style="background-color: #1e293b; color: #ffffff"
                  href="?page=<%= page + 1 %>&search=<%= search %>"
                  >Next</a
                >
              </li>
              <% } %>
            </ul>
          </nav>
        </div>
        <!-- PAGINATION -->
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js2/stockManagement.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const success_msg =
        "<%= success_msg && success_msg.length > 0 ? success_msg[0] : '' %>";
      const error_msg =
        "<%= error_msg && error_msg.length > 0 ? error_msg[0] : '' %>";

      if (success_msg && success_msg.length > 0) {
        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: success_msg,
          confirmButtonColor: '#3085d6',
        });
      }

      if (error_msg && error_msg.length > 0) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: error_msg,
          confirmButtonColor: '#d33',
        });
      }
    </script>
  </body>
</html>
