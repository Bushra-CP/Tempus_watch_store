<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Tempus</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css2/demo.css" />
    <style>
      .custom-thead th {
        background-color: #212529 !important;
        color: #fff !important;
        letter-spacing: 0.5px;
      }

      .table td,
      .table th {
        vertical-align: middle;
      }

      .btn {
        border-radius: 6px;
        font-weight: 500;
      }

      .view-btn {
        background: #212529;
        color: #fff !important;
        font-size: 0.8rem;
        padding: 5px 12px;
        border-radius: 20px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: 0.2s;
      }
      .view-btn:hover {
        background: #000;
        text-decoration: none;
      }

      .variant-card {
        border: 1px solid #e9ecef;
        border-radius: 12px;
        padding: 15px;
        background: #fdfdfd;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        margin-bottom: 15px;
        transition: transform 0.2s;
      }
      .variant-card:hover {
        transform: scale(1.02);
      }
    </style>
  </head>

  <body class="bg-light">
    <!--topBar-->
    <%- include('../../views/partials/admin/topBar')%>
    <!--topBar-->

    <!-- Main Content -->
    <div class="main-content">
      <!--sideBar-->
      <%- include('../../views/partials/admin/sideBar')%>
      <!--sideBar-->

      <!-- Dashboard Content -->
      <main class="container-fluid py-4">
        <div
          class="d-flex justify-content-between align-items-center mb-4 mx-3"
        >
          <!-- Search Bar -->

          <form action="/admin/products" method="get" class="d-flex">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                name="search"
                value="<%=search%>"
                placeholder="Search by product name..."
                style="border-radius: 5px; width: 300px"
              />
              <button
                class="btn btn-white btn-outline-dark mx-3"
                type="submit"
                style="border-radius: 5px"
              >
                Search
              </button>
              <button
                class="btn btn-white mx-3"
                type="clear"
                style="border-radius: 5px; border-color: #212529"
              >
                <a href="/admin/products" class="text-decoration-none text-dark"
                  >Clear</a
                >
              </button>
            </div>
          </form>

          <div class="row g-4 mb-4">
            <button class="btn btn-success">
              <a
                href="/admin/products/add"
                class="text-white text-decoration-none"
              >
                + Add Products
              </a>
            </button>
          </div>
        </div>

        <!-- Products Table -->
        <div class="container mt-4">
          <div class="card shadow-sm">
            <div class="card-header">
              <h5 class="card-title mb-0">Products</h5>
            </div>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table
                  class="table table-bordered table-hover align-middle text-center"
                >
                  <thead class="custom-thead">
                    <tr>
                      <th style="width: 150px">Product Name</th>
                      <th style="width: 200px">Description</th>
                      <th style="width: 120px">Brand</th>
                      <th style="width: 150px">Category</th>
                      <th style="width: 150px">Variants</th>
                      <th style="width: 120px">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(productList.length > 0){ %> <%
                    productList.forEach((product)=>{ %>
                    <tr>
                      <td><%= product.productName %></td>
                      <td>
                        <a
                          class="view-btn"
                          data-bs-toggle="collapse"
                          data-bs-target="#demo_<%=product._id%>"
                        >
                          <i class="bi bi-eye"></i> View
                        </a>
                        <div
                          id="demo_<%=product._id%>"
                          class="collapse mt-2 p-2 border rounded bg-light"
                        >
                          <%=product.description%>
                        </div>
                      </td>
                      <td><%= product.brand %></td>
                      <td><%= product.category.categoryName %></td>

                      <!-- Variants -->
                      <td>
                        <a
                          href="/admin/products/variant/add?id=<%=product._id%>"
                          class="btn btn-outline-secondary btn-sm"
                          >Add Variants</a
                        >
                        <button
                          type="button"
                          class="btn btn-sm btn-primary mt-2"
                          data-bs-toggle="modal"
                          data-bs-target="#variantModal_<%= product._id %>"
                        >
                          View Variants
                        </button>
                      </td>

                      <!-- Actions -->
                      <td>
                        <div class="d-flex flex-column gap-2">
                          <button
                            type="button"
                            class="btn btn-sm btn-white btn-outline-dark"
                            data-bs-toggle="modal"
                            data-bs-target="#productEditModal_<%= product._id %>"
                          >
                            Edit
                          </button>
                          <% if(product.isListed){ %>
                          <a
                            href="/admin/products/unlist?id=<%=product._id%>"
                            class="btn btn-outline-danger btn-sm"
                            onclick="unlistProduct(event, '<%=product.productName%>', this.href)"
                            >Unlist</a
                          >
                          <% } else { %>
                          <a
                            href="/admin/products/list?id=<%=product._id%>"
                            class="btn btn-outline-success btn-sm"
                            onclick="listProduct(event, '<%=product.productName%>', this.href)"
                            >List</a
                          >
                          <% } %>

                         

                          <% let offerExist = 0; productOffer.forEach((x) => { if
                      (String(x.productId) === String(product._id)) { offerExist =
                      1; } }); %>
                      <%if(offerExist){%>
                      <a
                        class="btn btn-outline-danger btn-sm"
                        data-bs-toggle="modal"
                        data-bs-target="#editOfferModal_<%=product._id%>"
                        >Edit offer</a
                      >
                      <%}else{%>
                      <a
                        class="btn btn-outline-success btn-sm"
                        data-bs-toggle="modal"
                        data-bs-target="#addOfferModal_<%=product._id%>"
                        >Add offer</a
                      >
                      <%}%>

                          <!-- ADD OFFER MODAL -->
                          <div
                            class="modal fade"
                            id="addOfferModal_<%=product._id%>"
                            tabindex="-1"
                            aria-hidden="true"
                          >
                            <div
                              class="modal-dialog modal-lg modal-dialog-centered"
                            >
                              <div
                                class="modal-content border-0 shadow-lg custom-modal"
                              >
                                <!-- Modal Header -->
                                <div class="modal-header bg-primary text-white">
                                  <h5 class="modal-title">
                                    <i class="bi bi-tags-fill me-2"></i> Add
                                    Product Offer
                                  </h5>
                                  <button
                                    type="button"
                                    class="btn-close btn-close-white"
                                    data-bs-dismiss="modal"
                                  ></button>
                                </div>

                                <!-- Modal Body -->
                                <div class="modal-body p-4">
                                  <form
                                    action="/admin/addProductOffer"
                                    method="POST"
                                    novalidate
                                  >
                                    <!-- Hidden Product ID -->
                                    <input
                                      type="hidden"
                                      name="productId"
                                      value="<%= product._id %>"
                                    />
                                    <input
                                  type="hidden"
                                  name="productName"
                                  value="<%= product.productName %>"
                                />

                                    <div class="row g-3">
                                      <!-- Offer Title -->
                                      <div class="col-md-6">
                                        <label class="form-label"
                                          >Offer Title</label
                                        >
                                        <input
                                          type="text"
                                          class="form-control"
                                          name="offerTitle"
                                          required
                                        />
                                        <p id="err_title"></p>
                                      </div>

                                      <!-- Discount Type -->
                                      <div class="col-md-6">
                                        <label class="form-label"
                                          >Discount Type</label
                                        >
                                        <select
                                          class="form-select"
                                          name="discountType"
                                          required
                                        >
                                          <option value="PERCENTAGE">
                                            Percentage (%)
                                          </option>
                                          <option value="FIXED">
                                            Fixed Amount (₹)
                                          </option>
                                        </select>
                                      </div>

                                      <!-- Discount Value -->
                                      <div class="col-md-6">
                                        <label class="form-label"
                                          >Discount Value</label
                                        >
                                        <input
                                          type="number"
                                          class="form-control"
                                          name="discountValue"
                                          min="1"
                                          required
                                        />
                                        <p id="err_value"></p>
                                      </div>

                                      <!-- Start Date -->
                                      <div class="col-md-6">
                                        <label class="form-label"
                                          >Start Date</label
                                        >
                                        <input
                                          type="date"
                                          class="form-control"
                                          name="startDate"
                                          required
                                        />
                                        <p id="err_startDate"></p>
                                      </div>

                                      <!-- End Date -->
                                      <div class="col-md-6">
                                        <label class="form-label"
                                          >End Date</label
                                        >
                                        <input
                                          type="date"
                                          class="form-control"
                                          name="endDate"
                                          required
                                        />
                                        <p id="err_endDate"></p>
                                      </div>

                                      <!-- Status -->
                                      <div class="col-md-6">
                                        <label class="form-label">Status</label>
                                        <select
                                          class="form-select"
                                          name="status"
                                        >
                                          <option value="active" selected>
                                            Active
                                          </option>
                                          <option value="inactive">
                                            Inactive
                                          </option>
                                        </select>
                                      </div>
                                    </div>

                                    <div class="mt-4 text-end">
                                      <button
                                        type="submit"
                                        class="btn btn-success px-4"
                                      >
                                        <i class="bi bi-check-circle me-1"></i>
                                        Save Offer
                                      </button>
                                    </div>
                                  </form>
                                </div>
                              </div>
                            </div>
                          </div>
                          <!-- ADD OFFER MODAL -->



                                                <!-- EDIT OFFER MODAL -->
                      <div
                        class="modal fade"
                        id="editOfferModal_<%=product._id%>"
                        tabindex="-1"
                        aria-hidden="true"
                      >
                        <div
                          class="modal-dialog modal-lg modal-dialog-centered"
                        >
                          <div
                            class="modal-content border-0 shadow-lg custom-modal"
                          >
                            <!-- Modal Header -->
                            <div class="modal-header bg-primary text-white">
                              <h5 class="modal-title">
                                <i class="bi bi-tags-fill me-2"></i> Edit
                                Product Offer
                              </h5>
                              <button
                                type="button"
                                class="btn-close btn-close-white"
                                data-bs-dismiss="modal"
                              ></button>
                            </div>
                            <% let offer=productOffer.find((x)=>
                            (String(x.productId)===String(product._id)) ) %>
                            <!-- Modal Body -->
                            <div class="modal-body p-4">
                              <form
                                action="/admin/editProductOffer?_method=put"
                                method="POST"
                                novalidate
                              >
                                <!-- Hidden Product ID -->
                                <input
                                  type="hidden"
                                  name="productId"
                                  value="<%= product._id %>"
                                />

                                <div class="row g-3">
                                  <!-- Offer Title -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Offer Title</label
                                    >
                                    <input
                                      type="text"
                                      class="form-control"
                                      name="offerTitle"
                                      value="<%= offer ? offer.offerTitle : '' %>"
                                      required
                                    />
                                  </div>

                                  <!-- Discount Type -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Discount Type</label
                                    >
                                    <select
                                      class="form-select"
                                      name="discountType"
                                      required
                                    >
                                      <option value="PERCENTAGE">
                                        Percentage (%)
                                      </option>
                                      <option value="FIXED">
                                        Fixed Amount (₹)
                                      </option>
                                    </select>
                                  </div>

                                  <!-- Discount Value -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Discount Value</label
                                    >
                                    <input
                                      type="number"
                                      class="form-control"
                                      name="discountValue"
                                      min="1"
                                      value="<%= offer ? offer.discountValue : '' %>"
                                      required
                                    />
                                  </div>

                                  <!-- Start Date -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Start Date
                                    </label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      name="startDate"
                                      value="<%= offer ? offer.startDate.toDateString() :
                                      '' %>"
                                      required
                                    />
                                  </div>

                                  <!-- End Date -->
                                  <div class="col-md-6">
                                    <label class="form-label">End Date </label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      name="endDate"
                                      value="<%= offer ? offer.endDate.toDateString() : ''
                                      %>"
                                      required
                                    />
                                  </div>

                                  <!-- Status -->
                                  <div class="col-md-6">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" name="status">
                                      <option value="active" selected>
                                        Active
                                      </option>
                                      <option value="inactive">Inactive</option>
                                    </select>
                                  </div>
                                </div>

                                <div class="mt-4 text-end">
                                  <button
                                    type="submit"
                                    class="btn btn-success px-4"
                                  >
                                    <i class="bi bi-check-circle me-1"></i> Edit
                                    Offer
                                  </button>
                                </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- EDIT OFFER MODAL -->

                        </div>
                      </td>
                    </tr>

                    <!-- Variant Modal -->
                    <div
                      class="modal fade"
                      id="variantModal_<%= product._id %>"
                      tabindex="-1"
                      aria-hidden="true"
                    >
                      <div class="modal-dialog modal-xl modal-dialog-centered">
                        <div class="modal-content">
                          <div class="modal-header bg-white text-dark">
                            <h5 class="modal-title">
                              Variants of <%= product.productName %>
                            </h5>
                            <button
                              type="button"
                              class="btn-close btn-close-white"
                              data-bs-dismiss="modal"
                              aria-label="Close"
                            ></button>
                          </div>
                          <div class="modal-body">
                            <div class="container-fluid">
                              <div class="row">
                                <% product.variants.forEach((variant, index) =>
                                {%>
                                <div class="col-md-6">
                                  <div class="variant-card">
                                    <strong
                                      >Variant
                                      <%= index + 1 %></strong
                                    ><br />
                                    Strap:
                                    <%= variant.strapMaterial %>
                                    -
                                    <%= variant.strapColor %><br />
                                    Dial:
                                    <%= variant.dialColor %><br />
                                    Case Size:
                                    <%= variant.caseSize %><br />
                                    Movement Type:
                                    <%= variant.movementType %><br />
                                    Case Material:
                                    <%= variant.caseMaterial %><br />
                                    Stock:
                                    <%= variant.stockQuantity %><br />
                                    Actual Price: ₹<%= variant.actualPrice %><br />
                                    Offer Price: ₹<%= variant.offerPrice %><br />
                                    <div class="container">
                                      <div class="row">
                                        <div class="col-md-3 d-flex">
                                          <%
                                          variant.variantImages.forEach(image=>
                                          { %>
                                          <img
                                            src="<%= image %>"
                                            class="img-thumbnail m-1"
                                            width="70"
                                            height="70"
                                            alt="Variant image"
                                          />
                                          <% }) %>
                                        </div>
                                      </div>
                                    </div>

                                    <div
                                      class="d-flex justify-content-between mt-3"
                                    >
                                      <a
                                        href="/admin/products/variant/edit?productId=<%=product._id%>&variantId=<%=variant._id%>"
                                        class="btn btn-sm btn-outline-primary"
                                        >Edit</a
                                      >
                                      <% if(variant.isListed){ %>
                                      <button
                                        type="button"
                                        class="btn btn-sm btn-outline-danger"
                                        onclick="unlistVariant('<%=variant._id%>')"
                                      >
                                        Unlist
                                      </button>
                                      <% } else { %>
                                      <button
                                        type="button"
                                        class="btn btn-sm btn-outline-success"
                                        onclick="listVariant('<%=variant._id%>')"
                                      >
                                        List
                                      </button>
                                      <% } %>
                                    </div>
                                  </div>
                                </div>
                                <% }) %>
                              </div>
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button
                              type="button"
                              class="btn btn-secondary"
                              data-bs-dismiss="modal"
                            >
                              Close
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- End Modal -->

                    <!-- ///PRODUCT DETAILS EDIT MODAL -->
                    <div
                      class="modal fade"
                      id="productEditModal_<%= product._id %>"
                      tabindex="-1"
                      aria-labelledby="editProductModalLabel"
                      aria-hidden="true"
                    >
                      <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content shadow-lg border-0 rounded-4">
                          <!-- Header -->
                          <div
                            class="modal-header bg-white text-dark rounded-top-4"
                          >
                            <h5
                              class="modal-title fw-bold"
                              id="editProductModalLabel"
                            >
                              Edit Product Details
                            </h5>
                            <button
                              type="button"
                              class="btn-close btn-close-white"
                              data-bs-dismiss="modal"
                              aria-label="Close"
                            ></button>
                          </div>

                          <!-- Form -->
                          <form
                            action="/admin/products/edit?id=<%= product._id %>"
                            method="POST"
                          >
                            <div class="modal-body">
                              <!-- Product Name -->
                              <div class="mb-3">
                                <label class="form-label fw-semibold"
                                  >Product Name</label
                                >
                                <input
                                  type="text"
                                  name="productName"
                                  class="form-control shadow-sm"
                                  placeholder="Enter product name"
                                  value="<%= product.productName %>"
                                  required
                                />
                              </div>

                              <!-- Description -->
                              <div class="mb-3">
                                <label class="form-label fw-semibold"
                                  >Description</label
                                >
                                <textarea
                                  name="description"
                                  rows="3"
                                  class="form-control shadow-sm"
                                  placeholder="Enter product description"
                                  required
                                >
<%=product.description%></textarea
                                >
                              </div>

                              <!-- Brand -->
                              <div class="mb-3">
                                <label class="form-label fw-semibold"
                                  >Brand</label
                                >
                                <input
                                  type="text"
                                  name="brand"
                                  class="form-control shadow-sm"
                                  placeholder="Enter brand name"
                                  value="<%= product.brand %>"
                                  ;
                                  required
                                />
                              </div>

                              <!-- Category -->
                              <div class="mb-3">
                                <label class="form-label fw-semibold"
                                  >Category</label
                                >
                                <select
                                 class="form-select shadow-sm"
                                 name="category"
                                 id="category"
                                 required
                                >
                                 <option value="">--Select Category--</option>
                                 <% categoryNames.forEach(cat => { %>
                                    <option value="<%= cat._id %>" <%= cat._id.toString() === product.category._id.toString() ? "selected" : "" %>>
                                       <%= cat.categoryName %></option> 
                                 <% }) %>
                                </select>
                              </div>
                            </div>

                            <!-- Footer -->
                            <div class="modal-footer">
                              <button
                                type="button"
                                class="btn btn-secondary rounded-3"
                                data-bs-dismiss="modal"
                              >
                                Cancel
                              </button>
                              <button
                                type="submit"
                                class="btn btn-white btn-outline-dark rounded-3"
                              >
                                Save Changes
                              </button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>

                    <!-- ///PRODUCT DETAILS EDIT MODAL -->

                    <% }) %>
                    <% } else { %>
                    <tr>
                      <td colspan="6" class="text-center py-4">
                        No products found
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- PAGINATION -->
        <div class="d-flex justify-content-end me-5 mt-5">
          <nav>
            <ul class="pagination">
              <% if (page > 1) { %>
              <li class="page-item">
                <a
                  class="page-link"
                  style="background-color: #1e293b; color: #ffffff"
                  href="?page=<%= page - 1 %>&search=<%= search %>"
                  >Prev</a
                >
              </li>
              <% } %>
              <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= page === i ? 'active' : '' %>">
                <a
                  class="page-link"
                  style="background-color: #1e293b; color: #ffffff"
                  href="?page=<%= i %>&search=<%= search %>"
                  ><%= i %></a
                >
              </li>
              <% } %>
              <% if (page < totalPages) { %>
              <li class="page-item">
                <a
                  class="page-link"
                  style="background-color: #1e293b; color: #ffffff"
                  href="?page=<%= page + 1 %>&search=<%= search %>"
                  >Next</a
                >
              </li>
              <% } %>
            </ul>
          </nav>
        </div>
        <!-- PAGINATION -->
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js2/demo.js"></script>
    <script src="/js2/fetchCalls.js"></script>
    <script src="/js2/productOffer.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const success_msg =
        "<%= success_msg && success_msg.length > 0 ? success_msg[0] : '' %>";
      const error_msg =
        "<%= error_msg && error_msg.length > 0 ? error_msg[0] : '' %>";

      if (success_msg && success_msg.length > 0) {
        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: success_msg,
          confirmButtonColor: '#3085d6',
        });
      }

      if (error_msg && error_msg.length > 0) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: error_msg,
          confirmButtonColor: '#d33',
        });
      }
    </script>
  </body>
</html>
