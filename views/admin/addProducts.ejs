<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Tempus</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css2/demo.css" />
  </head>
  <body class="bg-light">
    <!--topBar-->
    <%- include('../../views/partials/admin/topBar')%>
    <!--topBar-->

    <!-- Main Content -->
    <div class="main-content">
      <!--sideBar-->
      <%- include('../../views/partials/admin/sideBar')%>
      <!--sideBar-->
      <div class="form-container">
        <div class="container py-5">
          <div class="row justify-content-center">
            <div class="col-lg-7">
              <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-white text-dark rounded-top-4">
                  <h5 class="mb-0 fw-semibold">Add New Products</h5>
                </div>
                <div class="card-body p-4">
                  <form
                    id="imageForm"
                    action="/admin/products/add"
                    method="POST"
                    enctype="multipart/form-data"
                    novalidate
                  >
                    <!-- Product Details -->
                    <div class="mb-4">
                      <label class="form-label fw-semibold">Product Name</label>
                      <input
                        type="text"
                        class="form-control shadow-sm rounded-3"
                        id="productName"
                        name="productName"
                        placeholder="Enter product name"
                        required
                      />
                      <p
                        id="errProductName"
                        class="errorMsg small text-danger mt-1"
                      ></p>
                    </div>

                    <div class="mb-4">
                      <label class="form-label fw-semibold">Description</label>
                      <textarea
                        class="form-control shadow-sm rounded-3"
                        name="description"
                        id="description"
                        rows="3"
                        placeholder="Write a short description..."
                        required
                      ></textarea>
                      <p
                        id="errDescription"
                        class="errorMsg small text-danger mt-1"
                      ></p>
                    </div>

                    <div class="mb-4">
                      <label class="form-label fw-semibold">Brand</label>
                      <input
                        type="text"
                        class="form-control shadow-sm rounded-3"
                        name="brand"
                        id="brand"
                        placeholder="Enter brand name"
                        required
                      />
                      <p
                        id="errBrand"
                        class="errorMsg small text-danger mt-1"
                      ></p>
                    </div>

                    <div class="mb-4">
                      <label class="form-label fw-semibold">Category</label>
                      <select
                        class="form-select shadow-sm rounded-3"
                        name="category"
                        id="category"
                        required
                      >
                        <option value="">-- Select Category --</option>
                        <% categoryNames.forEach(category => { %>
                        <option value="<%= category._id %>">
                          <%= category.categoryName %>
                        </option>
                        <% }) %>
                      </select>
                    </div>

                    <hr class="my-4" />

                    <!-- Variants Section -->
                    <div
                      class="bg-light py-2 px-3 border-start border-3 border-primary mb-3"
                    >
                      <h5 class="fw-semibold text-primary mb-0">📦 Variants</h5>
                    </div>

                    <div id="variants-container">
                      <div
                        class="variant border rounded-4 p-4 mb-4 bg-white shadow-sm"
                      >
                        <div class="row g-3">
                          <div class="col-md-6">
                            <label class="form-label fw-semibold"
                              >Strap Material</label
                            >
                            <input
                              type="text"
                              class="form-control shadow-sm"
                              name="variants[0][strapMaterial]"
                              required
                            />
                            <p
                              id="errVariants_0_strapMaterial"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-semibold"
                              >Strap Color</label
                            >
                            <input
                              type="text"
                              class="form-control shadow-sm"
                              name="variants[0][strapColor]"
                              required
                            />
                            <p
                              id="errVariants_0_strapColor"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-semibold"
                              >Dial Color</label
                            >
                            <input
                              type="text"
                              class="form-control shadow-sm"
                              name="variants[0][dialColor]"
                              required
                            />
                            <p
                              id="errVariants_0_dialColor"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-semibold"
                              >Case Size (mm)</label
                            >
                            <input
                              type="number"
                              class="form-control shadow-sm"
                              name="variants[0][caseSize]"
                              required
                            />
                            <p
                              id="errVariants_0_caseSize"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-semibold"
                              >Movement Type</label
                            >
                            <select
                              class="form-select shadow-sm"
                              name="variants[0][movementType]"
                              required
                            >
                              <option value="">-- Select Movement --</option>
                              <option value="Quartz">Quartz</option>
                              <option value="Automatic">Automatic</option>
                              <option value="Mechanical">Mechanical</option>
                              <option value="Smart">Smart</option>
                            </select>
                            <p
                              id="errVariants_0_movementType"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-semibold"
                              >Case Material</label
                            >
                            <input
                              type="text"
                              class="form-control shadow-sm"
                              name="variants[0][caseMaterial]"
                              required
                            />
                            <p
                              id="errVariants_0_caseMaterial"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-semibold"
                              >Stock Quantity</label
                            >
                            <input
                              type="number"
                              class="form-control shadow-sm"
                              name="variants[0][stockQuantity]"
                              required
                            />
                            <p
                              id="errVariants_0_stockQuantity"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-semibold"
                              >Actual Price</label
                            >
                            <input
                              type="number"
                              class="form-control shadow-sm"
                              name="variants[0][actualPrice]"
                              required
                            />
                            <p
                              id="errVariants_0_actualPrice"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-semibold"
                              >Offer Price</label
                            >
                            <input
                              type="number"
                              class="form-control shadow-sm"
                              name="variants[0][offerPrice]"
                              required
                            />
                            <p
                              id="errVariants_0_offerPrice"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-6">
                            <label class="form-label fw-semibold"
                              >SKU Code</label
                            >
                            <input
                              type="text"
                              class="form-control shadow-sm"
                              name="variants[0][skuCode]"
                              required
                            />
                            <p
                              id="errVariants_0_skuCode"
                              class="errorMsg small text-danger mt-1"
                            ></p>
                          </div>

                          <div class="col-md-12">
                            <label class="form-label fw-semibold"
                              >Variant Images</label
                            >
                            <input
                              type="file"
                              id="imageInput_0"
                              class="form-control shadow-sm"
                              name="variants[0][variantImages]"
                              accept="image/*"
                              multiple
                            />
                            <p id="errVariants_0_images" class="errorMsg small text-danger mt-1"></p>
                          </div>
                          <div
                            id="previewContainer_0"
                            class="d-flex flex-wrap gap-2 mt-2 border rounded p-2 bg-light"
                          ></div>
                        </div>
                      </div>
                    </div>

                    <!-- Add More Variants Button -->
                    <div class="d-flex gap-2 mb-4">
                      <button
                        type="button"
                        class="btn btn-outline-primary rounded-pill shadow-sm px-3"
                        onclick="addVariant()"
                      >
                        ➕ Add Another Variant
                      </button>
                    </div>

                    <!-- Submit -->
                    <div
                      class="d-flex justify-content-between align-items-center mb-3"
                    >
                      <div>
                        <button
                          type="submit"
                          class="btn btn-success px-4 fw-semibold shadow rounded-pill"
                        >
                          Save Product
                        </button>
                      </div>
                      <div class="d-flex gap-2">
                        <button
                          type="reset"
                          class="btn btn-outline-warning px-4 rounded-pill"
                        >
                          Reset
                        </button>
                      </div>
                    </div>
                  </form>

                  <!-- Modal -->
                  <div
                    class="modal fade"
                    id="cropperModal"
                    tabindex="-1"
                    aria-hidden="true"
                  >
                    <div class="modal-dialog modal-md">
                      <div class="modal-content border-0 shadow-lg">
                        <div class="modal-header bg-dark text-white">
                          <h6 class="modal-title">✂️ Crop Image</h6>
                          <button
                            type="button"
                            class="btn-close btn-close-white"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                          ></button>
                        </div>
                        <div class="modal-body text-center">
                          <img id="imageToCrop" class="img-fluid rounded" />
                        </div>
                        <div class="modal-footer">
                          <button
                            type="button"
                            id="cropButton"
                            class="btn btn-success px-4"
                          >
                            ✂ Crop
                          </button>
                          <button
                            type="button"
                            class="btn btn-secondary px-4"
                            data-bs-dismiss="modal"
                          >
                            ✖ Cancel
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <script src="/js2/cropMultipleImages.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const success_msg =
        "<%= success_msg && success_msg.length > 0 ? success_msg[0] : '' %>";
      const error_msg =
        "<%= error_msg && error_msg.length > 0 ? error_msg[0] : '' %>";

      if (success_msg && success_msg.length > 0) {
        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: success_msg,
          confirmButtonColor: '#3085d6',
        });
      }

      if (error_msg && error_msg.length > 0) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: error_msg,
          confirmButtonColor: '#d33',
        });
      }
    </script>
  </body>
</html>
