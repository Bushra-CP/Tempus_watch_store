<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Tempus</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <link rel="stylesheet" href="/css2/demo.css" />
  </head>
  <body class="bg-light">
    <!--topBar-->
    <%- include('../../views/partials/admin/topBar')%>
    <!--topBar-->

    <!-- Main Content -->
    <div class="main-content">
      <!--topBar-->
      <%- include('../../views/partials/admin/sideBar')%>
      <!--topBar-->
      <!-- Dashboard Content -->
      <main class="container-fluid py-4">
        <!-- Stats Cards -->

        <div class="d-flex justify-content-between align-items-center mb-4">
          <!-- Search Bar -->

          <form action="/admin/category" method="get" class="d-flex">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                name="search"
                value="<%=search%>"
                placeholder="Search by category name..."
                style="border-radius: 5px; width: 300px"
              />
              <button
                class="btn btn-primary mx-3"
                type="submit"
                style="border-radius: 5px"
              >
                Search
              </button>
              <button
                class="btn btn-primary"
                type="clear"
                style="border-radius: 5px"
              >
                <a
                  href="/admin/category"
                  class="text-decoration-none text-white"
                  >Clear</a
                >
              </button>
            </div>
          </form>
          <div class="dropdown dropdown-menu-end">
            <button
              type="button"
              class="btn btn-primary dropdown-toggle"
              data-bs-toggle="dropdown"
            >
              Fiter by status
            </button>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" onclick="checkActive('all')">All</a>
              </li>
              <li>
                <a class="dropdown-item" onclick="checkActive('activated')"
                  >Actived</a
                >
              </li>
              <li>
                <a class="dropdown-item" onclick="checkActive('deactivated')"
                  >Deactived</a
                >
              </li>
            </ul>
          </div>
          <div class="row g-4 mb-4">
            <div class="d-flex flex-row-reverse">
              <button class="btn btn-success">
                <a
                  href="/admin/category/add"
                  class="text-white text-decoration-none"
                >
                  + Add new Category
                </a>
              </button>
            </div>
          </div>
        </div>

        <div class="container">
          <div class="row">
            <!-- CATEGORY CARDS -->
            <%if(category.length>0){%> <%category.forEach((item)=>{%>
            <div class="col-md-4 mb-5">
              <div class="card" style="width: 350px">
                <img
                  class="card-img-top"
                  src="<%=item.image%>"
                  alt="Card image"
                  style="width: 350px; height: 350px"
                />
                <div class="card-body">
                  <h4 class="card-title"><%=item.categoryName%></h4>
                  <p class="card-text"><%=item.description%></p>
                  <a
                    href="/admin/category/edit?id=<%=item._id%>"
                    class="btn btn-primary"
                    >Edit</a
                  >

                  <%if(item.isActive){%>
                  <a
                    href="/admin/category/deactivate?id=<%=item._id%>"
                    class="btn btn-secondary text-decoration-none"
                    onclick="return confirm('Are you sure you want to deactivate <%= item.categoryName %>?');"
                  >
                    Click to Deactivate</a
                  >
                  <%}else{%>
                  <a
                    href="/admin/category/activate?id=<%=item._id%>"
                    class="btn btn-warning me-2 text-decoration-none"
                    onclick="return confirm('Are you sure you want to activate <%= item.categoryName %>?');"
                  >
                    Click to Activate</a
                  >
                  <%}%>
                </div>
              </div>
            </div>
            <%})%>
            <%}else{%>
            <div class="d-flex justify-content-center">
              <h6 class="h6">No categories found..</h6>
            </div>
            <%}%>
            <!-- CATEGORY CARDS -->
          </div>
        </div>
        <!-- PAGINATION -->
        <div class="d-flex justify-content-end me-5 mt-5">
          <nav>
            <ul class="pagination">
              <% if (page > 1) { %>
              <li class="page-item">
                <a
                  class="page-link"
                  style="background-color: #1e293b; color: #ffffff"
                  href="?page=<%= page - 1 %>&search=<%= search %>"
                  >Prev</a
                >
              </li>
              <% } %>
              <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= page === i ? 'active' : '' %>">
                <a
                  class="page-link"
                  style="background-color: #1e293b; color: #ffffff"
                  href="?page=<%= i %>&search=<%= search %>"
                  ><%= i %></a
                >
              </li>
              <% } %>
              <% if (page < totalPages) { %>
              <li class="page-item">
                <a
                  class="page-link"
                  style="background-color: #1e293b; color: #ffffff"
                  href="?page=<%= page + 1 %>&search=<%= search %>"
                  >Next</a
                >
              </li>
              <% } %>
            </ul>
          </nav>
        </div>
        <!-- PAGINATION -->
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js2/demo.js"></script>
  </body>
</html>
