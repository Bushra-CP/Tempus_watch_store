<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Tempus</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <link rel="stylesheet" href="/css2/demo.css" />
    <style>
      .custom-thead th {
        background-color: #212529 !important;
        color: #fff !important;
      }
    </style>
  </head>
  <body class="bg-light">
    <!--topBar-->
    <%- include('../../views/partials/admin/topBar')%>
    <!--topBar-->

    <!-- Main Content -->
    <div class="main-content">
      <!--topBar-->
      <%- include('../../views/partials/admin/sideBar')%>
      <!--topBar-->
      <!-- Dashboard Content -->
      <main class="container-fluid py-4">
        <!-- Stats Cards -->

        <div class="d-flex justify-content-between align-items-center mb-4">
          <!-- Search Bar -->

          <form action="/admin/category" method="get" class="d-flex">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                name="search"
                value="<%=search%>"
                placeholder="Search by category name..."
                style="border-radius: 5px; width: 300px"
              />
              <button
                class="btn btn-white btn-outline-dark mx-3"
                type="submit"
                style="border-radius: 5px"
              >
                Search
              </button>
              <button
                class="btn btn-white mx-3"
                type="clear"
                style="border-radius: 5px; border-color: #212529"
              >
                <a href="/admin/category" class="text-decoration-none text-dark"
                  >Clear</a
                >
              </button>
            </div>
          </form>
          <div class="dropdown dropdown-menu-end">
            <button
              type="button"
              class="btn btn-white btn-outline-dark dropdown-toggle"
              data-bs-toggle="dropdown"
            >
              Fiter by status
            </button>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" onclick="checkActive('all')">All</a>
              </li>
              <li>
                <a class="dropdown-item" onclick="checkActive('activated')"
                  >Actived</a
                >
              </li>
              <li>
                <a class="dropdown-item" onclick="checkActive('deactivated')"
                  >Deactived</a
                >
              </li>
            </ul>
          </div>
          <div class="row g-4 mb-4">
            <div class="d-flex flex-row-reverse">
              <button class="btn btn-success">
                <a
                  href="/admin/category/add"
                  class="text-white text-decoration-none"
                >
                  + Add new Category
                </a>
              </button>
            </div>
          </div>
        </div>

        <div class="container mt-4">
          <div class="card shadow-sm">
            <div class="card-header">
              <h5 class="card-title mb-0">Categories</h5>
            </div>
            <div class="card-body p-0">
              <% if (category.length > 0) { %>
              <table
                class="table table-bordered table-hover align-middle text-center"
              >
                <thead class="custom-thead">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% category.forEach((item, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td>
                      <img
                        src="<%= item.image %>"
                        alt="Category Image"
                        style="
                          width: 70px;
                          height: 70px;
                          object-fit: cover;
                          border-radius: 8px;
                        "
                      />
                    </td>
                    <td><%= item.categoryName %></td>
                    <td style="max-width: 200px"><%= item.description %></td>
                    <td>
                      <% if (item.isActive) { %>
                      <span class="badge bg-success">Active</span>
                      <% } else { %>
                      <span class="badge bg-danger">Inactive</span>
                      <% } %>
                    </td>
                    <td>
                      <a
                        href="/admin/category/edit?id=<%= item._id %>"
                        class="btn btn-sm btn-primary me-2"
                      >
                        Edit
                      </a>
                      <% if (item.isActive) { %>
                      <a
                        href="/admin/category/deactivate?id=<%= item._id %>"
                        class="btn btn-sm btn-warning"
                        onclick="return confirm('Are you sure you want to deactivate <%= item.categoryName %>?');"
                      >
                        Deactivate
                      </a>
                      <% } else { %>
                      <a
                        href="/admin/category/activate?id=<%= item._id %>"
                        class="btn btn-sm btn-success"
                        onclick="return confirm('Are you sure you want to activate <%= item.categoryName %>?');"
                      >
                        Activate
                      </a>
                      <% } %>

                      <% let offerExist = 0; categoryOffer.forEach((x) => { if
                      (String(x.categoryId) === String(item._id)) { offerExist =
                      1; } }); %>
                      <%if(offerExist){%>
                      <a
                        class="btn btn-outline-danger btn-sm"
                        data-bs-toggle="modal"
                        data-bs-target="#editOfferModal_<%=item._id%>"
                        >Edit offer</a
                      >
                      <%}else{%>
                      <a
                        class="btn btn-outline-success btn-sm"
                        data-bs-toggle="modal"
                        data-bs-target="#addOfferModal_<%=item._id%>"
                        >Add offer</a
                      >
                      <%}%>

                      <!-- ADD OFFER MODAL -->
                      <div
                        class="modal fade"
                        id="addOfferModal_<%=item._id%>"
                        tabindex="-1"
                        aria-hidden="true"
                      >
                        <div
                          class="modal-dialog modal-lg modal-dialog-centered"
                        >
                          <div
                            class="modal-content border-0 shadow-lg custom-modal"
                          >
                            <!-- Modal Header -->
                            <div class="modal-header bg-primary text-white">
                              <h5 class="modal-title">
                                <i class="bi bi-tags-fill me-2"></i> Add
                                Category Offer
                              </h5>
                              <button
                                type="button"
                                class="btn-close btn-close-white"
                                data-bs-dismiss="modal"
                              ></button>
                            </div>

                            <!-- Modal Body -->
                            <div class="modal-body p-4">
                              <form
                                action="/admin/addCategoryOffer"
                                method="POST"
                                novalidate
                              >
                                <!-- Hidden category ID -->
                                <input
                                  type="hidden"
                                  name="categoryId"
                                  value="<%= item._id %>"
                                />

                                <input
                                  type="hidden"
                                  name="categoryName"
                                  value="<%= item.categoryName %>"
                                />

                                <div class="row g-3">
                                  <!-- Offer Title -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Offer Title</label
                                    >
                                    <input
                                      type="text"
                                      class="form-control"
                                      name="offerTitle"
                                      required
                                    />
                                    <p id="err_title"></p>
                                  </div>

                                  <!-- Discount Type -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Discount Type</label
                                    >
                                    <select
                                      class="form-select"
                                      name="discountType"
                                      required
                                    >
                                      <option value="PERCENTAGE">
                                        Percentage (%)
                                      </option>
                                      <option value="FIXED">
                                        Fixed Amount (₹)
                                      </option>
                                    </select>
                                  </div>

                                  <!-- Discount Value -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Discount Value</label
                                    >
                                    <input
                                      type="number"
                                      class="form-control"
                                      name="discountValue"
                                      min="1"
                                      required
                                    />
                                    <p id="err_value"></p>
                                  </div>

                                  <!-- Start Date -->
                                  <div class="col-md-6">
                                    <label class="form-label">Start Date</label>
                                    <input
                                      type="date"
                                      class="form-control"
                                      name="startDate"
                                      required
                                    />
                                    <p id="err_startDate"></p>
                                  </div>

                                  <!-- End Date -->
                                  <div class="col-md-6">
                                    <label class="form-label">End Date</label>
                                    <input
                                      type="date"
                                      class="form-control"
                                      name="endDate"
                                      required
                                    />
                                    <p id="err_endDate"></p>
                                  </div>

                                  <!-- Status -->
                                  <div class="col-md-6">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" name="status">
                                      <option value="active" selected>
                                        Active
                                      </option>
                                      <option value="inactive">Inactive</option>
                                    </select>
                                  </div>
                                </div>

                                <div class="mt-4 text-end">
                                  <button
                                    type="submit"
                                    class="btn btn-success px-4"
                                  >
                                    <i class="bi bi-check-circle me-1"></i> Save
                                    Offer
                                  </button>
                                </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- ADD OFFER MODAL -->

                      <!-- EDIT OFFER MODAL -->
                      <div
                        class="modal fade"
                        id="editOfferModal_<%=item._id%>"
                        tabindex="-1"
                        aria-hidden="true"
                      >
                        <div
                          class="modal-dialog modal-lg modal-dialog-centered"
                        >
                          <div
                            class="modal-content border-0 shadow-lg custom-modal"
                          >
                            <!-- Modal Header -->
                            <div class="modal-header bg-primary text-white">
                              <h5 class="modal-title">
                                <i class="bi bi-tags-fill me-2"></i> Edit
                                Category Offer
                              </h5>
                              <button
                                type="button"
                                class="btn-close btn-close-white"
                                data-bs-dismiss="modal"
                              ></button>
                            </div>
                            <% let offer=categoryOffer.find((x)=>
                            (String(x.categoryId)===String(item._id)) ) %>
                            <!-- Modal Body -->
                            <div class="modal-body p-4">
                              <form
                                action="/admin/editCategoryOffer?_method=put"
                                method="POST"
                                novalidate
                              >
                                <!-- Hidden Product ID -->
                                <input
                                  type="hidden"
                                  name="categoryId"
                                  value="<%= item._id %>"
                                />

                                <div class="row g-3">
                                  <!-- Offer Title -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Offer Title</label
                                    >
                                    <input
                                      type="text"
                                      class="form-control"
                                      name="offerTitle"
                                      value="<%= offer ? offer.offerTitle : '' %>"
                                      required
                                    />
                                  </div>

                                  <!-- Discount Type -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Discount Type</label
                                    >
                                    <select
                                      class="form-select"
                                      name="discountType"
                                      required
                                    >
                                      <option value="PERCENTAGE">
                                        Percentage (%)
                                      </option>
                                      <option value="FIXED">
                                        Fixed Amount (₹)
                                      </option>
                                    </select>
                                  </div>

                                  <!-- Discount Value -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Discount Value</label
                                    >
                                    <input
                                      type="number"
                                      class="form-control"
                                      name="discountValue"
                                      min="1"
                                      value="<%= offer ? offer.discountValue : '' %>"
                                      required
                                    />
                                  </div>

                                  <!-- Start Date -->
                                  <div class="col-md-6">
                                    <label class="form-label"
                                      >Start Date
                                    </label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      name="startDate"
                                      value="<%= offer ? offer.startDate.toDateString() :
                                      '' %>"
                                      required
                                    />
                                  </div>

                                  <!-- End Date -->
                                  <div class="col-md-6">
                                    <label class="form-label">End Date </label>
                                    <input
                                      type="text"
                                      class="form-control"
                                      name="endDate"
                                      value="<%= offer ? offer.endDate.toDateString() : ''
                                      %>"
                                      required
                                    />
                                  </div>

                                  <!-- Status -->
                                  <div class="col-md-6">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" name="status">
                                      <option value="active" selected>
                                        Active
                                      </option>
                                      <option value="inactive">Inactive</option>
                                    </select>
                                  </div>
                                </div>

                                <div class="mt-4 text-end">
                                  <button
                                    type="submit"
                                    class="btn btn-success px-4"
                                  >
                                    <i class="bi bi-check-circle me-1"></i> Edit
                                    Offer
                                  </button>
                                </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- EDIT OFFER MODAL -->
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
              <% } else { %>
              <div class="alert alert-info text-center">
                No categories found..
              </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- PAGINATION -->
        <div class="d-flex justify-content-end me-5 mt-5">
          <nav>
            <ul class="pagination">
              <% if (page > 1) { %>
              <li class="page-item">
                <a
                  class="page-link"
                  style="background-color: #1e293b; color: #ffffff"
                  href="?page=<%= page - 1 %>&search=<%= search %>"
                  >Prev</a
                >
              </li>
              <% } %>
              <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= page === i ? 'active' : '' %>">
                <a
                  class="page-link"
                  style="background-color: #1e293b; color: #ffffff"
                  href="?page=<%= i %>&search=<%= search %>"
                  ><%= i %></a
                >
              </li>
              <% } %>
              <% if (page < totalPages) { %>
              <li class="page-item">
                <a
                  class="page-link"
                  style="background-color: #1e293b; color: #ffffff"
                  href="?page=<%= page + 1 %>&search=<%= search %>"
                  >Next</a
                >
              </li>
              <% } %>
            </ul>
          </nav>
        </div>
        <!-- PAGINATION -->
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js2/demo.js"></script>
    <script src="/js2/productOffer.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const success_msg =
        "<%= success_msg && success_msg.length > 0 ? success_msg[0] : '' %>";
      const error_msg =
        "<%= error_msg && error_msg.length > 0 ? error_msg[0] : '' %>";

      if (success_msg && success_msg.length > 0) {
        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: success_msg,
          confirmButtonColor: '#3085d6',
        });
      }

      if (error_msg && error_msg.length > 0) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: error_msg,
          confirmButtonColor: '#d33',
        });
      }
    </script>
  </body>
</html>
